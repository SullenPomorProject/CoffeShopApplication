<Page x:Class="CoffeShopApplication.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeShopApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <StackPanel Width="300" Background="White" VerticalAlignment="Center">
        <Label HorizontalAlignment="Center">Address</Label>
        <TextBox x:Name="addressTextBox"></TextBox>
        <Label HorizontalAlignment="Center">Password</Label>
        <PasswordBox x:Name="passwordPasswordBox" Margin="0 0 0 20"/>
        <Button Click="AuthorizationButton_Click">Authorizate</Button>
    </StackPanel>
</Page>
